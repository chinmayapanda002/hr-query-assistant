# =============================================================
# Enterprise HR Assistant - Environment Configuration
# =============================================================

# Groq API Key (required)
GROQ_API_KEY= ""
LLM_MODEL=llama-3.3-70b-versatile
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# LLM Model Configuration
LLM_MODEL=claude-opus-4-6
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.1

# Vector Store (ChromaDB)
CHROMA_PERSIST_DIR=./data/chroma_db
CHROMA_COLLECTION_NAME=hr_policies

# SQLite Database for Analytics
DATABASE_URL=sqlite+aiosqlite:///./data/hr_analytics.db

# Document Storage
DOCUMENTS_DIR=./data/documents

# API Server
API_HOST=0.0.0.0
API_PORT=8000
SECRET_KEY=your_secret_key_here_change_in_production

# Analytics Dashboard
DASHBOARD_PORT=8050

# Escalation Settings
ESCALATION_EMAIL=hr@company.com
ESCALATION_THRESHOLD=0.6  # Confidence below this triggers escalation

# Role-Based Access Control
ADMIN_ROLES=hr_admin,hr_manager
EMPLOYEE_ROLES=employee,manager,executive

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/hr_assistant.log
